<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ScrollPane?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.tracker.AddWorkoutController"
      style="-fx-background-color: black;"
      alignment="TOP_CENTER">
    <HBox style="-fx-background-color: rgba(73, 77, 78, 0.5);
                            -fx-padding: 10px;
                            -fx-background-radius: 15px;"
          spacing="5" alignment="CENTER">
        <Button text="Add workout" onAction="#goToAddWorkout"
                style="-fx-background-color: purple;"
                maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button text="Statistics" onAction="#goToViewStatistics"
                style="-fx-background-color: transparent;"
                maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button text="Progress" onAction="#goToViewGraphs"
                style="-fx-background-color: transparent;"
                maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
    </HBox>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox fx:id="workoutInfoContainer"
          spacing="20.0"
          style="-fx-border-color: gray;
                -fx-border-width: 2;
                -fx-padding: 10;
                -fx-border-radius: 15px;"/>
    <ScrollPane fitToWidth="true"
                style="-fx-background-color: transparent;
                       -fx-border-color: transparent;
            ">
        <VBox fx:id="exercisesContainer"
              style="-fx-background-color: black;
                     -fx-spacing: 5px"/>
    </ScrollPane>
    <HBox alignment="CENTER" spacing="20">
        <Button text="Add exercise" onAction="#addExerciseSection"
                style="-fx-background-color: rgba(0, 255, 0, 0.6);"
                minWidth="300"/>

        <Button text="Remove exercise" onAction="#removeLastExercise"
                style="-fx-background-color: rgba(255, 50, 50, 0.6);"
                minWidth="300"/>
    </HBox>
    <Button text="Save workout session" onAction="#saveWorkout"
            style="-fx-background-color: purple;"
            maxWidth="400"/>
    <Button text="Delete all data" onAction="#deleteDB"
            style="-fx-background-color: rgba(255, 50, 50, 1);"
            maxWidth="300"/>
</VBox>
